.container {
  min-height: 100vh;
  padding: 30rpx;
  background: linear-gradient(180deg, #f0f4ff 0%, #ffffff 100%);
}

.progress-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.1);
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease-out;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  will-change: width;
}

.progress-info {
  text-align: center;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
}

.question-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  will-change: transform;
}

.question-header {
  margin-bottom: 30rpx;
}

.question-badge {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.question-text {
  font-size: 38rpx;
  line-height: 1.8;
  color: #333;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.options-container {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.options-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  font-weight: 500;
}

.options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  border: 3rpx solid transparent;
  transition: background-color 0.15s ease-out, border-color 0.15s ease-out, box-shadow 0.15s ease-out;
  position: relative;
  overflow: hidden;
  will-change: background-color, border-color;
}

.option-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  transform: scaleY(0);
  transition: transform 0.3s;
}

.option-item.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.option-item.selected::before {
  transform: scaleY(1);
}


.option-circle {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.option-item.selected .option-circle {
  background: rgba(255, 255, 255, 0.25);
  box-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.3);
}

.option-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  transition: color 0.3s;
}

.option-item.selected .option-number {
  color: #fff;
}

.option-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.option-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  transition: color 0.3s;
}

.option-item.selected .option-label {
  color: #fff;
}

.nav-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 0 10rpx;
}

.nav-btn {
  width: 100%;
  max-width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  transition: all 0.3s;
}

.prev-btn {
  background: linear-gradient(135deg, #e8eaf6 0%, #f3e5f5 100%);
  color: #666;
}

.prev-btn:not([disabled]):active {
  transform: scale(0.98);
}

.prev-btn[disabled] {
  opacity: 0.4;
  background: #f5f5f5;
}

.nav-btn::after {
  border: none;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  gap: 30rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
