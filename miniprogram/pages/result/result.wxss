/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.score-section {
  text-align: center;
  padding: 60rpx 0;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.score-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.score-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #667eea;
}

.recommendation-section,
.feedback-section,
.contact-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.recommendation-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
}

.feedback-list {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
}

.feedback-item {
  margin-bottom: 20rpx;
}

.feedback-separator {
  margin: 20rpx 0;
  text-align: left;
}

.separator-text {
  font-size: 24rpx;
  color: #999;
}

.assistant-intro {
  margin-bottom: 30rpx;
}

.share-tip-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.assistant-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.assistant-benefits {
  padding-left: 20rpx;
}

.benefit-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.benefit-bullet {
  font-size: 28rpx;
  color: #667eea;
  margin-right: 12rpx;
  line-height: 1.6;
}

.benefit-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.qrcode-container {
  text-align: center;
  padding: 40rpx 0;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.qrcode-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.share-btn,
.home-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0;
}

.share-btn {
  background: #fff;
  color: #667eea;
}

.home-btn {
  background: rgba(255, 255, 255, 0.8);
  color: #666;
}

.share-btn::after,
.home-btn::after {
  border: none;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 28rpx;
  color: #fff;
}
